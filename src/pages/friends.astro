---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";
import FriendsPreview from "../components/FriendsPreview.astro";

const projects = (await getCollection("astro-friendslist")).sort(
	(a, b) => b.data.title.valueOf() - a.data.title.valueOf(),
);
---

<BaseLayout
	title="Friends"
	description="Learn about CHANGEME most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="My Friends"
				tagline="Check out some of my friends and colleagues."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<FriendsPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
